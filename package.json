{
  "name": "nestjs-graphql-boilerplate",
  "version": "1.0.0",
  "description": "NestJS Boilerplate",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json",
    "test:graphql": "jest --config ./test/graphql/jest-graphql.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernandohenriques/nestjs-graphql-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/fernandohenriques/nestjs-graphql-boilerplate/issues"
  },
  "homepage": "https://github.com/fernandohenriques/nestjs-graphql-boilerplate#readme",
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@as-integrations/fastify": "^2.0.0",
    "@fastify/helmet": "^10.1.1",
    "@nestjs/apollo": "^11.0.5",
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/cqrs": "^9.0.3",
    "@nestjs/graphql": "^11.0.5",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/platform-fastify": "^9.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv-safe": "^8.2.0",
    "graphql": "^16.6.0",
    "helmet": "^7.0.0",
    "mongoose": "^7.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.1",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  }
}
